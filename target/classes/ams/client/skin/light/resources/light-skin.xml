<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- Skin settings -->
    <id>cvr.light.skin</id>
    <class>ams.client.skin.light.LightSkin</class>
    <supportedSystems>all</supportedSystems>

    <!-- Skin information -->
    <title>Light skin</title>
    <description>This is an light skin for AMS</description>
    <author>Cipher</author>

    <!-- Including WebLaF default skin, will use its style as a base -->
    <include nearClass="com.alee.skin.light.WebLightSkin">resources/web-light-skin.xml</include>

    <!-- 自定义样式表 覆盖 web-light-skin.xml -->
    <include>resources/frame.xml</include>

</skin>